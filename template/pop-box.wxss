.person_box {
  position: relative;
}

.phone_select {
  position: absolute;
  top: 0%;
  left: 0%;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1001;
}

.phone_item {
  display: flex;
  background-color: #fff;
}

.select_one {
  text-align: center;
  background-color: rgb(239, 239, 239);
  width: 676rpx;
  height: 100rpx;
  line-height: 100rpx;
  margin: 0 5%;
  border-bottom: 2rpx solid rgb(255, 255, 255);
}

.hot-top {
  padding: 10rpx 0 20rpx 30rpx;
}

.hot-item-top {
  padding-left: 30rpx;
  flex-wrap: wrap;
}

.flex-label-item {
  flex: none;
  background: #f8f8f8;
  border-radius: 100px;
  padding: 0rpx 20rpx 10rpx 0rpx;
  margin: 15rpx 12rpx 15rpx 0rpx;
}

.hot-item-name {
  padding: 18rpx 18rpx 20rpx 30rpx;
}

.his-items {
  padding: 8rpx 30rpx;
}

.search-top {
  padding: 20rpx 30rpx;
  background: #fff;
  z-index: 500;
  margin-bottom: 8rpx;
  box-shadow: 0 2px 8px 0 rgba(0, 0, 0, 0.10);
}

.hot-bottom {
  width: 100%;
  height: 10rpx;
  background: #f8f8f8;
}

.del-item {
  width: 360rpx;
  height: 88rpx;
  justify-content: center;
}

.del-label {
  flex-shrink: 0;
  flex-grow: 0;
  flex-basis: auto;
  padding-right: 20rpx;
  align-self: center;
}

.screen {
  width: 100%;
  height: 88rpx;
  border-bottom: 1rpx solid #f7f7f7;
}
