.my-top {
  width: 690rpx;
  height: 90%;
  background: #fff;
  box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.20);
  border-radius: 8px;
  position: absolute;
  top: 0;
  margin: 10rpx 30rpx 0 30rpx;
}

.my-item {
  padding: 25rpx 0 25rpx 30rpx;
}

.my-btn {
  width: 450rpx;
  height: 128rpx;
  margin-top: 40rpx;
}

.my-btn-bg {
  width: 370rpx;
  height: 88rpx;
  background: #ba8f44;
  box-shadow: 0 0 20px 0 rgba(148, 119, 0, 0.10);
  border-radius: 100px;
}

.input-name {
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #ccc;
  letter-spacing: 0.02px;
}

.input-name-block {
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #080808;
  letter-spacing: 0.02px;
}

.textarea-border {
  padding: 8rpx 12rpx;
  border: 1rpx solid #ccc;
  border-radius: 8rpx;
}