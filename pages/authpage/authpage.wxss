.button-sp-area {
  margin: 0 auto;
  padding-top: 15px;
  width: 60%;
}

.mini-btn {
  margin-right: 5px;
}

.textColor {
  text-align: center;
  font-size: 20px;
  font-weight: 400;
}

.my-shadow {
  height: 10rpx;
  background: #fff;
  box-shadow: 0 2px 8px 0 rgba(0, 0, 0, 0.10);
}

.my-name {
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #666;
  letter-spacing: 0.02rpx;
}

.my-concent {
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #999;
  letter-spacing: 0.02rpx;
}

.my-img {
  width: 706rpx;
  height: 265rpx;
  background: #fff;
  box-shadow: 0 0 8rpx 0 rgba(0, 0, 0, 0.10);
  border-radius: 20rpx;
}

.my-sign-img {
  width: 16rpx;
  height: 12rpx;
}

.my-bt {
  width: 450rpx;
  height: 128rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  align-self: flex-end;
  background: #ba8f44;
  box-shadow: 0 0 20rpx 0 rgba(148, 119, 0, 0.10);
  border-radius: 100rpx;
}

.my-bt-name {
  font-family: PingFangSC-Medium;
  font-size: 30rpx;
  color: #fff;
  letter-spacing: -1prx;
  text-align: center;
}
