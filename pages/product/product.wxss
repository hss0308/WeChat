.content {
  padding: 1rem;
  border-bottom: 1rpx;
}

.page_dec {
  font-size: 10px;
}

.icon-img {
  float: right;
  width: 80rpx;
  height: 80rpx;
}

.sp-name {
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #333;
  letter-spacing: 0;
}

.sp-sale-num {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #999;
  letter-spacing: -1rpx;
}

.sp-shop {
  width: 220rpx;
  height: 75rpx;
  box-shadow: 0 0 20px 0 rgba(78, 61, 0, 0.20);
  background: #ba8f44;
  border-radius: 100rpx;
  transform: translateX(-65rpx);
}

.sp-shop-name {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #fff;
  letter-spacing: 0;
  position: absolute;
  transform: translate(65rpx, 16rpx);
}

.price-bg {
  width: 104rpx;
  height: 50rpx;
  background: #f9f7e8;
  border-radius: 8px;
}

.price-name {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #ba8f44;
  letter-spacing: -1rpx;
  display: flex;
  justify-content: center;
  align-self: center;
}

.low-price {
  font-family: PingFangSC-Medium;
  font-size: 30rpx;
  color: #66be00;
  letter-spacing: -1rpx;
  display: flex;
  justify-content: center;
  align-self: center;
}

.high-price {
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #d0021b;
  letter-spacing: -1rpx;
  display: flex;
  justify-content: center;
  align-self: center;
}

.chage-price {
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #999;
  letter-spacing: -1px;
}

.text-rigth {
  padding-left: 628rpx;
  position: absolute;
  transform: translate(-40rpx);
}

.new-price {
  font-family: PingFangSC-Medium;
  font-size: 56rpx;
  color: #ba8f44;
  letter-spacing: -1rpx;
}

.new-price-position {
  position: absolute;
  transform: translate(-120rpx,230rpx);
}

.text-dec {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #666;
  letter-spacing: -1rpx;
}

.img-list{
  width: 100%;
  height: 100%;
}

.my-shop-textarea {
  display: block;
  width: 600rpx;
  height: 100px;
}