/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 100rpx;
}

.user-motto {
  margin-top: 10rpx;
  padding-left: 15rpx;
}

.ticket-title {
  margin-top: 20px;
  display: flex;
  flex-direction: column;
  text-align: center;
  font-size: 18px;
  letter-spacing: 2px;
}

.ticket-item {
  width: 100%;
  margin-top: 10px;
  display: flex;
  flex-direction: column;
  text-align: left;
}

.page-button {
  margin-top: 50rpx;
}

.flex-wrp {
  display: flex;
}

.item-title {
  margin-top: 12rpx;
  font-size: 15px;
  padding-left: 10rpx;
}

.item-name {
  margin-top: 10rpx;
  font-size: 12px;
  padding-left: 10rpx;
}

.flex-title {
  width: 250px;
  height: 100px;
  text-align: center;
}

.other-navigator-hover {
  color: red;
}

.navigator-hover {
  width: 100%;
  height: 100%;
}

.flex-item{
	flex: 1;
}
.flex-direction-col{
	flex-direction: column;
}
.flex-direction-row{
	flex-direction: row;
}

.swiperimg{
    width: 100%;
    height: 300rpx;
}

.img-icon{
  padding-top: 12rpx;
  width: 100%;
  height: 60rpx;
}

.mini-btn{
  margin-top: 20px;
  display: flex;
}